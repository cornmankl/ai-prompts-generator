# Server Configuration
PORT=5000
NODE_ENV=development
HOST=0.0.0.0
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-here-change-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
GLM_API_KEY=your-glm-api-key-here
QWEN_API_KEY=your-qwen-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here
MOONSHOT_API_KEY=your-moonshot-api-key-here
BAICHUAN_API_KEY=your-baichuan-api-key-here
INTERNLM_API_KEY=your-internlm-api-key-here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-prompts-generator
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@aipromptsgenerator.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=1000

# Security Configuration
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
SESSION_SECRET=your-session-secret-here
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Analytics Configuration
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Plugin Configuration
PLUGIN_DIRECTORY=./plugins
PLUGIN_MARKETPLACE_URL=https://plugins.aipromptsgenerator.com

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_PLUGINS=true
ENABLE_ANALYTICS=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_GAMIFICATION=true
